{% extends 'base.html.twig' %}

{% block body %}
    {% include 'default/header.html.twig' %}
    {% include 'default/nav.html.twig' %}

    <div class="container rounded">
        <div class="row justify-content-center">
            <section class="col-lg-9 text-center">
                <div class="row">
                    <div class="col-12 text-center w-50">
                        <h2 class="mt-3 text-center">Formulaire de contact</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-center m-auto">
                        {{ form_start(form) }}
                        <div class="form-group m-auto">
                            {{ form_row(form.firstname) }}
                        </div>
                        <div class="form-group m-auto">
                            {{  form_row(form.lastname) }}
                        </div>
                        <div class="form-group m-auto">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="form-group m-auto">
                            {{ form_row(form.phone) }}
                        </div>
                        <div class="form-group m-auto">
                            {{ form_row(form.question) }}
                        </div>
                        <div class="text-center mb-4">
                            <input type="submit" class="btn btn-secondary" value="Envoyer">
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </section>
            {% include 'default/other.html.twig' %}
        </div>
    </div>

    {% include 'default/footer.html.twig' %}

    <div id="scrollUp">
        <a href="#top"><img src="/assets/images/to_top.png"/></a>
    </div>
{% endblock %}
