{% extends 'base.html.twig' %}

{% block body %}
    {% include 'default/header.html.twig' %}
    {% include 'default/nav.html.twig' %}

    <div class="container rounded">
        <div class="row justify-content-center">
            <section class="col-lg-9 text-center">

                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label for="username">Email</label>
                        <input type="text" class="form-control w-50 m-auto" id="username" name="_username" value="{{ last_username }}"/>
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" class="form-control w-50 m-auto" id="password" name="_password" />
                        <a href="{{ path('reset_password') }}" class="a-login text-left ml-2">mot de passe oubli√© ?</a>
                    </div>
                    <div class="row justify-content-center">
                        <div class="form-check form-check-inline">
                            <input type="checkbox" class="form-check-input mb-3" id="exampleCheck1">
                            <label class="form-check-label align-text-top mb-3" for="exampleCheck1">Se souvenir de moi</label>
                        </div>
                    </div>
                    <button class="btn btn-secondary" type="submit" name="login">Se connecter</button>
                </form>
            </section>
        </div>
    </div>

    <div id="scrollUp">
        <a href="#top"><img src="{{ asset('assets/images/to_top.png') }}"/></a>
    </div>

    {% include 'default/footer.html.twig' %}
{% endblock %}
