{% extends 'base.html.twig' %}

{% block body %}
    {% include 'default/header.html.twig' %}
    {% include 'default/nav.html.twig' %}

    <div class="container rounded">
        <div class="row justify-content-center">
            <section class="col-lg-9 text-center">
                {% if is_granted('IS_AUTHENTICATED_FULLY') is not null %}
                    <h3 class="d-inline-block m-2">Bonjour  {{ connectedUser.login }}</h3>
                    <a class="navbar-brand mx-5 my-2" href="/logout"><i class="fas fa-power-off"></i></a>
                    <a class="navbar-brand mx-5 my-2" href="{{ path('show_climber', { 'id': connectedUser.id }) }}"><i class="fas fa-user"></i>  Mon profil</a>
                {% endif %}
                <h2 class="mt-3 mb-3" id="news">News des grimpeurs</h2>
                {% for post in posts %}
                    <div class="card shadow-sm w-75 m-auto">
                        <img class="card-img-top" src="{{ post.imgLink }}" alt="image du titre">
                        <div class="card-body">
                            <h4 class="m-1 p-1" class="card-title">{{ post.title }}</h4>
                            <p class="text-justify p-1 m-1" class="card-text">{{ post.content }}<br>{{ post.author }} <small>{{ post.createdAt|date('d-m-Y') }}</small></p>
                        </div>
                    </div>
                {% endfor %}
            </section>
            {% include 'default/other.html.twig' %}
        </div>
    </div>

    {% include 'default/footer.html.twig' %}

{% endblock %}
