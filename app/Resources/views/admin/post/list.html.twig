{% extends 'admin/base_admin.html.twig' %}

{% block section %}

<h1 class="mt-3 mb-3 h1-back">Listes des news</h1>

<table class="table">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Image du titre</th>
            <th>Contenu de l'article</th>
            <th>Date de rédaction</th>
            <th>Article public</th>
            <th>Article actif</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for post in posts %}
        <tr>
            <td>{{ post.title }}</td>
            <td><img src="{{ post.imgLink }}" alt="image de la news"/></td>
            <td>{{ post.content }}</td>
            <td>{{ post.createdAt|date('d-m-Y') }}</td>
            <td>{% if post.publicPost %}oui{% else %}non{% endif %}</td>
            <td>{% if post.activePost %}oui{% else %}non{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('show_post', { 'id': post.id }) }}">Voir</a>
                    </li>
                    <li>
                        <a href="{{ path('edit_post', { 'id': post.id }) }}">Modifier</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('new_post') }}">Créer une nouvelle news</a>
    </li>
</ul>

{% endblock %}
